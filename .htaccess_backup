
# ==========================================
# КЕШИРОВАНИЕ СТАТИЧЕСКИХ ФАЙЛОВ
# ==========================================
<IfModule mod_expires.c>
    ExpiresActive On
    
    # Изображения - кеш на месяц
    ExpiresByType image/jpg "access plus 1 month"
    ExpiresByType image/jpeg "access plus 1 month"
    ExpiresByType image/gif "access plus 1 month"
    ExpiresByType image/png "access plus 1 month"
    ExpiresByType image/webp "access plus 1 month"
    ExpiresByType image/svg+xml "access plus 1 month"
    
    # CSS и JS - кеш на неделю  
    ExpiresByType text/css "access plus 1 week"
    ExpiresByType application/javascript "access plus 1 week"
    ExpiresByType text/javascript "access plus 1 week"
    
    # HTML - кеш на час
    ExpiresByType text/html "access plus 1 hour"
    
    # Документы - кеш на месяц
    ExpiresByType application/pdf "access plus 1 month"
    
    # Шрифты - кеш на год
    ExpiresByType font/woff "access plus 1 year"
    ExpiresByType font/woff2 "access plus 1 year"
    ExpiresByType application/font-woff "access plus 1 year"
    ExpiresByType application/font-woff2 "access plus 1 year"
</IfModule>

# ==========================================
# GZIP СЖАТИЕ
# ==========================================
<IfModule mod_deflate.c>
    # Сжатие текстовых файлов
    AddOutputFilterByType DEFLATE text/plain
    AddOutputFilterByType DEFLATE text/html
    AddOutputFilterByType DEFLATE text/xml
    AddOutputFilterByType DEFLATE text/css
    AddOutputFilterByType DEFLATE text/javascript
    AddOutputFilterByType DEFLATE application/xml
    AddOutputFilterByType DEFLATE application/xhtml+xml
    AddOutputFilterByType DEFLATE application/rss+xml
    AddOutputFilterByType DEFLATE application/javascript
    AddOutputFilterByType DEFLATE application/x-javascript
    AddOutputFilterByType DEFLATE application/json
    
    # Исключения для уже сжатых файлов
    SetEnvIfNoCase Request_URI \
        \.(?:gif|jpe?g|png|webp|zip|gz|rar|bz2|7z)$ no-gzip dont-vary
</IfModule>

# ==========================================
# БЕЗОПАСНОСТЬ
# ==========================================
# Запрет доступа к служебным файлам
<Files .htaccess>
    order allow,deny
    deny from all
</Files>

<Files "*.md">
    order allow,deny
    deny from all
</Files>

# Запрет доступа к PHP файлам в директории upload
<Directory "upload">
    <Files "*.php">
        order allow,deny
        deny from all
    </Files>
</Directory>

# ==========================================
# SEO ОПТИМИЗАЦИЯ
# ==========================================
# Добавление заголовков для лучшего SEO
<IfModule mod_headers.c>
    # Кеширование
    Header set Cache-Control "public, max-age=2592000" "expr=%{CONTENT_TYPE} =~ m#image/#"
    Header set Cache-Control "public, max-age=604800" "expr=%{CONTENT_TYPE} =~ m#text/css#"
    Header set Cache-Control "public, max-age=604800" "expr=%{CONTENT_TYPE} =~ m#application/javascript#"
    
    # Безопасность
    Header always set X-Content-Type-Options "nosniff"
    Header always set X-Frame-Options "SAMEORIGIN"
    Header always set Referrer-Policy "strict-origin-when-cross-origin"
    
    # Удаление версии сервера
    Header unset Server
    Header unset X-Powered-By
</IfModule>

# ==========================================
# ПРОИЗВОДИТЕЛЬНОСТЬ
# ==========================================
# Отключение ETags для лучшего кеширования
FileETag None

# Оптимизация для изображений
<IfModule mod_rewrite.c>
    RewriteEngine On
    
    # Автоматическое добавление WebP если поддерживается
    RewriteCond %{HTTP_ACCEPT} image/webp
    RewriteCond %{REQUEST_FILENAME} \.(jpe?g|png)$
    RewriteCond %{REQUEST_FILENAME}.webp -f
    RewriteRule ^(.+)\.(jpe?g|png)$ $1.$2.webp [T=image/webp,E=accept:1,L]
</IfModule>

# ==========================================
# МИМТИПЫ (если не настроены на сервере)
# ==========================================
<IfModule mod_mime.c>
    AddType image/webp .webp
    AddType font/woff2 .woff2
    AddType application/javascript .js
</IfModule>

# ==========================================
# РЕДИРЕКТЫ (при необходимости)
# ==========================================
# Раскомментируйте если нужен редирект с www на без www
# RewriteEngine On
# RewriteCond %{HTTP_HOST} ^www\.(.*)$ [NC]
# RewriteRule ^(.*)$ https://%1/$1 [R=301,L]

# ==========================================
# CHARSET
# ==========================================
AddDefaultCharset UTF-8
